{
  "env": {
    "es6": true,
    "node": true,
    "amd": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "camelcase": [2, { "properties": "never" }],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "no-console": "off"
  }
}
